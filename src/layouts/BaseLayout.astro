---
import '../styles/global.css';
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
const { pageTitle } = Astro.props;
---

<html
  lang="en"
  class="bg-gradient-to-r from-everglade-300 to-everglade-700 text-everglade-50"
>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body>
    <Header />
    <div class="container mx-auto p-10 mt-20 lg:p-20 mb-20 z-0">
      <h1
        class="z-0 mb-4 text-4xl font-extrabold leading-none text-everglade-900 uppercase drop-shadow-xl"
      >
        {pageTitle}
      </h1>
      <slot />
    </div>
    <Footer />
  </body>
</html>
